      "type": "number",
      "default": 0.2
    },
    "autoplay": {
      "type": "number",
      "default": 4
    },
    "autoplayHoverPause": {
      "type": "boolean",
      "default": false
    },
    "slidesPerView": {
      "type": "number",
      "default": 3
    },
    "centeredSlides": {
      "type": "boolean",
      "default": true
    },
    "loop": {
      "type": "boolean",
      "default": true
    },
    "freeScroll": {
      "type": "boolean",
      "default": false
    },
    "fadeEdges": {
      "type": "boolean",
      "default": false
    },
