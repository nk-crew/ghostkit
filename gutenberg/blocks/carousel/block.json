{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "ghostkit/carousel",
  "category": "ghostkit",
  "title": "Carousel",
  "description": "Carousel for any type of content - images or other blocks.",
  "keywords": ["carousel", "slider"],
  "supports": {
    "html": false,
    "className": false,
    "anchor": true,
    "align": ["wide", "full"]
