{
	"editor.defaultFormatter": null,
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[php]": {
		"editor.defaultFormatter": null,
		"editor.formatOnSave": false
	},
	"editor.formatOnSave": true,
	"scss.validate": false,
	"css.validate": false,
	"less.validate": false,
	"editor.codeActionsOnSave": {
		"source.fixAll.stylelint": "explicit"
	},
	"stylelint.validate": [
		"css",
		"scss"
	],
	"stylelint.snippet": [
		"css",
		"scss"
	],
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"search.exclude": {
		"**/.git": true,
		"**/node_modules": true,
		"**/build": true,
		"**/dist": true,
		"**/dist-zip": true,
		"**/vendor": true,
		"**/composer-libraries": true
	},
}
