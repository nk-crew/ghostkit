{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "ghostkit/grid",
  "category": "ghostkit",
  "title": "Advanced Columns",
  "description": "Responsive grid block to build layouts of all shapes and sizes thanks to a twelve column system. Visual columns size and order change.",
  "keywords": ["row", "columns", "section"],
  "supports": {
    "ghostkit": {
      "animation": {
        "reveal": true,
        "scroll": true,
        "loop": true,
        "mouse": true,
        "hover": true
      }
    },
    "html": false,
    "className": false,
    "anchor": true,
    "align": ["wide", "full"]
  },
  "attributes": {
    "isTemplatesModalOnly": {
      "type": "boolean"
    },
    "gap": {
      "type": "string",
      "default": "md"
    },
    "gapCustom": {
      "type": "number"
    },
    "gapVerticalCustom": {
      "type": "number"
    },
    "verticalAlign": {
      "type": "string"
    },
    "horizontalAlign": {
      "type": "string"
    }
  }
}
